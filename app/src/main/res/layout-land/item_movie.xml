<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <ImageView
        android:id="@+id/imgMv"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".75"
        app:layout_constraintWidth_default="percent"
        android:layout_height="300dp"
        android:src="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtMv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        ></ImageView>


    <TextView
        android:id="@+id/txtMv"
        android:layout_width="0dp"
        android:text="vbnm,sdasdasdas"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgMv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:gravity="fill_vertical" />

    <TextView
        android:id="@+id/txtOverView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#C0C0C0"
        android:textSize="10sp"
        android:text="asfasfasfasfasfasfasfasfasfasfasfasfasfasfasfasfafafas"
        app:layout_constraintLeft_toRightOf="@id/imgMv"
        app:layout_constraintTop_toBottomOf="@id/txtMv"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="fill_vertical"
        android:maxLines="4"
        android:layout_margin="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>